{
  "name": "sleep-anywhere",
  "author": "Lloyd Brookes <75pound@gmail.com>",
  "version": "1.1.3",
  "description": "A sleep function you can use anywhere",
  "main": "dist/index.js",
  "repository": "https://github.com/75lb/sleep-anywhere",
  "keywords": [
    "sleep",
    "wait"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "files": [
    "index.mjs",
    "dist/index.js"
  ],
  "scripts": {
    "test": "npm run dist && node --experimental-modules test.mjs && test-runner test.js",
    "docs": "jsdoc2md -c jsdoc.conf index.mjs -t README.hbs > README.md",
    "dist": "rollup -f umd -n sleep -o dist/index.js index.mjs"
  },
  "devDependencies": {
    "jsdoc-to-markdown": "^5.0.2",
    "rollup": "^1.26.3",
    "test-runner": "^0.7.2"
  }
}
